{
  "coc.preferences.rootPatterns": [
    ".coc",
    ".git",
    ".vim",
    ".vscode"
  ],
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "rust",
    "json",
    "yaml"
  ],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.floatActions": true, // K Show Doc
  "coc.preferences.jumpCommand": "drop",
  "coc.source.buffer.ignoreGitignore": false,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.colorSupport": true,
  "suggest.labelMaxLength": 300,
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.snippetIndicator": "►",
  "suggest.floatEnable": true,
  "suggest.enablePreview": true,
  "suggest.detailMaxLength": 80,
  "suggest.asciiCharactersOnly": true,
  "suggest.timeout": 5000, // jedi timeout
  "diagnostic.enable": true,
  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.messageDelay": 200,
  "diagnostic.enableMessage": "always",
  "diagnostic.messageTarget": "float",
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "snippets.ultisnips.usePythonx": false,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "codeLens.enable": true,
  "pairs.enableBackspace": true,
  "signature.enable": true,
  "highlight.disableLanguages": [
    "python",
    "go"
  ],
  "jedi.enable": true,
  "jedi.startupMessage": false,
  "jedi.markupKindPreferred": "markdown",
  "jedi.diagnostics.enable": false,
  "jedi.diagnostics.didOpen": true,
  "jedi.diagnostics.didChange": true,
  "jedi.diagnostics.didSave": true,
  "jedi.hover.enable": true,
  "jedi.workspace.extraPaths": [
    "src/",
    "protos"
  ],
  "jedi.workspace.symbols.ignoreFolders": [
    ".nox",
    ".tox",
    ".venv",
    "__pycache__",
    "venv"
  ],
  "pyright.enable": true,
  "pyright.organizeimports.provider": "isort",
  "pyright.disableCompletion": true,
  "pyright.disableDiagnostics": false,
  "pyright.completion.importSupport": false,
  "pyright.completion.snippetSupport": false,
  "python.linting.enabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${env.HOME}/workspace/neovim3/bin/flake8",
  "python.sortImports.path": "${env.HOME}/workspace/neovim3/bin/isort",
  "python.sortImports.args": [
    "--settings-path",
    "${env.HOME}/.isort.cfg"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.stubPath": "typings",
  "python.analysis.diagnosticSeverityOverrides": {},
  "diagnostic-languageserver.enable": false,
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck",
    "python": "flake8"
  },
  "diagnostic-languageserver.linters": {
    "flake8": {
      "command": "${env.HOME}/workspace/neovim3/bin/flake8",
      "args": []
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": [
      "black",
      "isort"
    ],
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "${env.HOME}/workspace/neovim3/bin/black",
      "args": []
    },
    "isort": {
      "command": "${env.HOME}/workspace/neovim3/bin/isort",
      "args": [
        "--settings-path",
        "${env.HOME}/.isort.cfg"
      ]
    }
  },
  "yaml.format.enable": true,
  "json.format.enable": true,
  "markdownlint.onOpen": true,
  "markdownlint.onChange": true,
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": [
    "git-commit",
    "go",
    "markdown",
    "python",
    "rust",
    "text",
    "yaml",
    "yml"
  ],
  "cSpell.userWords": [
    "POSTGRES",
    "asyncio",
    "circleci",
    "eval",
    "fenc",
    "hexlify",
    "ipfs",
    "pytest",
    "rabbitmq",
    "struct",
    "submodule",
    "unhexlify",
    "venv",
    "virtualenv"
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "filetypes": [
        "sh"
      ],
      "args": [
        "start"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  }
}
