{
  "coc.preferences.rootPatterns": [
    ".coc",
    ".git",
    ".vim",
    ".vscode"
  ],
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "go",
    "rust",
    "json",
    "yaml"
  ],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.floatActions": true, // K Show Doc
  "coc.preferences.jumpCommand": "drop",
  "coc.source.buffer.ignoreGitignore": false,
  "coc.preferences.extensionUpdateCheck": "daily",
  "suggest.labelMaxLength": 300,
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.snippetIndicator": "►",
  "suggest.asciiCharactersOnly": true,
  "suggest.timeout": 5000,
  "diagnostic.enable": true,
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.messageDelay": 200,
  "diagnostic.enableMessage": "always",
  "diagnostic.messageTarget": "float",
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "codeLens.enable": true,
  "pairs.enableBackspace": true,
  "signature.enable": true,
  "highlight.disableLanguages": [
    "python",
    "go"
  ],
  "pyright.enable": true,
  "pyright.disableCompletion": true,
  "pyright.disableDiagnostics": false,
  "pyright.completion.importSupport": false,
  "pyright.completion.snippetSupport": false,
  "python.linting.enabled": false,
  "python.analysis.autoImportCompletions": false,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.stubPath": "typings",
  "python.analysis.diagnosticSeverityOverrides": {},
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "jedi.enable": true,
  "jedi.startupMessage": false,
  "jedi.markupKindPreferred": "plaintext",
  "jedi.diagnostics.enable": false,
  "jedi.hover.enable": true,
  "jedi.workspace.symbols.ignoreFolders": [
    ".nox",
    ".tox",
    ".venv",
    "__pycache__",
    "venv"
  ],
  "jedi.workspace.extraPaths": [
    "stc",
    "protos"
  ],
  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck",
    "python": [
      "flake8"
    ],
    "yaml": [
      "yamllint"
    ],
    "systemd": "systemd-analyze"
  },
  "diagnostic-languageserver.formatFiletypes": {
    // "isrot",
    "python": [
      "black"
    ],
    "sh": "shfmt"
  },
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": [
    "git-commit",
    "go",
    "markdown",
    "python",
    "rust",
    "text",
    "yaml",
    "yml"
  ],
  "cSpell.userWords": [
    "asyncio",
    "circleci",
    "eval",
    "fenc",
    "grpc",
    "ipfs",
    "noqa",
    "pytest",
    "rabbitmq",
    "struct",
    "submodule",
    "hexlify",
    "unhexlify",
    "venv",
    "virtualenv"
  ]
}
