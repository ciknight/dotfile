  //   "black"
  // ],
  //"sh": "shfmt"
  //},
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": [
    "git-commit",
    "go",
    "markdown",
    "python",
    "rust",
    "text",
    "yaml",
    "yml"
  ],
  "cSpell.userWords": [
    "asyncio",
    "circleci",
    "eval",
    "fenc",
    "grpc",
    "hexlify",
