{
  "workspace.rootPatterns": [
    ".coc",
    ".git",
    ".vim",
    ".vscode"
  ],
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSave": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.floatActions": true, // K Show Doc
  "coc.preferences.jumpCommand": "drop",
  "coc.source.buffer.ignoreGitignore": false,
  "coc.preferences.extensionUpdateCheck": "daily",
  "suggest.labelMaxLength": 300,
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.snippetIndicator": "►",
  "suggest.asciiCharactersOnly": true,
  "suggest.timeout": 5000,
  "diagnostic.enable": true,
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.messageDelay": 200,
  "diagnostic.enableMessage": "always",
  "diagnostic.messageTarget": "float",
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "codeLens.enable": true,
  "pairs.enableBackspace": true,
  "signature.enable": true,
  "highlight.disableLanguages": [
    "python",
    "go"
  ],
  "pyright.enable": true,
  "pyright.disableCompletion": false,
  "pyright.disableDiagnostics": false,
  "pyright.completion.importSupport": true,
  "pyright.completion.snippetSupport": false,
  "pyright.organizeimports.provider": "isort",
  "pyright.testing.provider": "pytest",
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${env.HOME}/workspace/neovim3/bin/flake8",
  "python.linting.flake8Args": [
    "--config",
    "${env.HOME}/.flake8"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${env.HOME}/workspace/neovim3/bin/black",
  "python.formatting.blackArgs": [
    "--diff",
    "--quiet",
    "--fast"
  ],
  "python.sortImports.path": "${env.HOME}/workspace/neovim3/bin/isort",
  "python.sortImports.args": [
    "--settings-path",
    "${env.HOME}/.isort.cfg"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.stubPath": "typings",
  "python.analysis.extraPaths": [
    "src",
    "src/protos"
  ],
  "python.analysis.typeshedPaths": [
    "stubs"
  ],
  "go.goplsOptions": {
    "completeUnimported": true
  },
  // "jedi.enable": false,
